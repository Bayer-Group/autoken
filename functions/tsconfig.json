{
  "compilerOptions": {
    "declaration": true,
    "module": "es6",
    "lib": ["es6"],
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "removeComments": true,
    "strict": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "test/**/*"  
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
